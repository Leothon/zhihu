<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="demo.com.zhihu.UI.Activity.LoginActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="知乎"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom">
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="用户："
                android:textColor="@color/white"
                android:textSize="19dp"/>

            <EditText
                android:id="@+id/Userame"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="密码："
                android:textColor="@color/white"
                android:textSize="19dp"/>

            <EditText
                android:id="@+id/Passord"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="50dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="其他账户登录："
                android:textColor="@color/white"
                android:textSize="19dp"/>

            <ImageButton
                android:id="@+id/qqlogin"
                android:background="@color/blue"
                android:src="@drawable/pigin"
                android:scaleType="centerInside"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <ImageButton
                android:id="@+id/Weibologin"
                android:src="@drawable/weibo"
                android:background="@color/blue"
                android:scaleType="centerInside"
                android:layout_marginLeft="15dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <ImageButton
                android:background="@color/blue"
                android:scaleType="centerInside"
                android:src="@drawable/wechat"
                android:id="@+id/Wechatlogin"
                android:layout_marginLeft="15dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:text="登录"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:id="@+id/Login_in"
                android:layout_width="120dp"
                android:layout_height="55dp" />
            <Button
                android:text="游客"
                android:textSize="22dp"
                android:background="@color/blue"
                android:id="@+id/Login_up"
                android:layout_marginLeft="20dp"
                android:layout_width="120dp"
                android:layout_height="55dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/forgetpassword"
            android:text="忘记密码？"
            android:textColor="@color/white"
            android:gravity="center"
            android:autoLink="all"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </LinearLayout>
</LinearLayout>

