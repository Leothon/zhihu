<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="500px"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/userlittleicon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/usericon" />
        <TextView
            android:id="@+id/topicoruser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="来自话题："
            android:textColor="@color/fontblack"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/topic_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="话题名称"
            android:textSize="15dp"
            android:textColor="@color/fontblack"
            android:gravity="center|left"/>
        <Button
            android:id="@+id/delete_part"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="×"
            android:textColor="@color/fontblack"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/part_titlename"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="问题的描述？"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center|left"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/part_main"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答 问题的回答"
            android:ellipsize="end"
            android:lineSpacingExtra="7dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:maxLines="3"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/agreequestions"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:id="@+id/agreenum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="998"
                android:textSize="15dp"
                android:textColor="@color/fontblack"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="赞同 ·"
                android:textColor="@color/fontblack"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/talkquestions"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/talknum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="180"
                android:textColor="@color/fontblack"
                android:textSize="15dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="评论 ·"
                android:textSize="15dp"
                android:textColor="@color/fontblack"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/followqustions"
            android:layout_marginRight="170dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="关注问题"
            android:textColor="@color/fontblack"
            android:textSize="15dp"
            android:gravity="center"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray"/>
</LinearLayout>